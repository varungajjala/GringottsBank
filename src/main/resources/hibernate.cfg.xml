<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-configuration">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.bytecode.use_reflection_optimizer">false</property>
        <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="hibernate.connection.password">root</property>
        <property name="hibernate.connection.url">jdbc:mysql://127.0.0.1:3307/GringottsBankdb</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
        <property name="show_sql">true</property>
        <mapping resource="common/Login.hbm.xml"></mapping>
        <mapping resource="common/InternalUser.hbm.xml"></mapping>
        <mapping resource="common/ExternalUser.hbm.xml"></mapping>
        <mapping resource="common/UserInfo.hbm.xml"></mapping>
        <mapping resource="common/Transactions.hbm.xml"></mapping>
        <mapping resource="common/TempUserInfo.hbm.xml"></mapping>
    </session-factory>
</hibernate-configuration>